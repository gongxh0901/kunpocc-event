{
    "compilerOptions": {
        "target": "es6",    // 
        "module": "commonjs",    // 
        "experimentalDecorators": true, // 启用ES装饰器。
        "strict": true,
        "strictNullChecks": false,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "stripInternal": true,
        "types": []
    },
    "include": [
        "./src/**/*"
    ],
    // 排除
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}